<div class="flex items-center space-x-4 pb-4 border-b">
  <div class="w-24 h-24">
    <%= image_tag item.product.image_url, class: "w-full h-full object-cover rounded" %>
  </div>

  <div class="flex-grow">
    <h3 class="font-semibold"><%= item.product.name %></h3>
    <p class="text-gray-600"><%= item.product.brand %></p>
  </div>

  <div class="flex items-center space-x-4">
    
    <div data-controller="cart" data-update-url="<%= cart_item_path(item) %>" class="flex items-center space-x-2">
      <button data-action="click->cart#decrement" class="w-8 h-8 flex items-center justify-center border rounded hover:bg-gray-100">-</button>
      <span data-cart-target="quantity" class="w-8 text-center"><%= item.quantity %></span>
      <button data-action="click->cart#increment" class="w-8 h-8 flex items-center justify-center border rounded hover:bg-gray-100">+</button>
    </div>

    <p class="font-semibold w-24 text-right">
      $<%= number_with_precision(item.total_price, precision: 2) %>
    </p>

    <%= button_to cart_item_path(item),
        method: :delete,
        class: "text-red-500 hover:text-red-700", data: { turbo_frame: "cart" } do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
      </svg>
    <% end %>
  </div>
</div>
